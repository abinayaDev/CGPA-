<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>CGPA Predictor</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body class="bg-light">

    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="mb-3">Upload CGPA Excel File</h4>

                <form id="uploadForm">
                    <input type="file" id="excelFile" class="form-control mb-3" accept=".xlsx,.xls,.csv" required />

                    <button type="submit" class="btn btn-primary">
                        Upload
                    </button>
                </form>

                <div id="message" class="mt-3"></div>

                <!-- Preview Table -->
                <div id="previewContainer" class="mt-5" style="display: none;">
                    <h5>Data Preview</h5>
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped" id="previewTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>Name</th>
                                    <th>Roll Number</th>
                                    <th>Completed Semesters</th>
                                    <th>Missing Semesters</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Data rows will be inserted here -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-5" id="predictionSection">
            <div class="col-md-8 offset-md-2">
                <div class="card p-4 shadow-sm">
                    <h4 class="mb-3">Predict CGPA</h4>
                    <div class="input-group mb-3">
                        <input type="text" id="predictRollNo" class="form-control"
                            placeholder="Enter Roll Number (e.g., CS101)">
                        <button class="btn btn-primary" id="btnPredict">Get Prediction</button>
                    </div>
                    <div id="predictionMessage"></div>
                    <div id="resultContainer" style="display: none;">
                        <h5 class="text-center">Final Predicted CGPA: <span id="finalCgpa"
                                class="text-primary fw-bold"></span></h5>
                        <canvas id="cgpaChart" width="400" height="200"></canvas>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <script src="upload.js"></script>
    <script src="predict.js"></script>
</body>

</html>